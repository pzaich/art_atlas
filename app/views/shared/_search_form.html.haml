= form_tag museums_path, :class => 'form-inline', :id => "search-form", :method => 'get', :remote => true, :data => {:type => 'json' } do
  .query-wrapper
    = search_field_tag :query, params[:query], :placeholder => "artist", :class => "input-xlarge", :data => { :autocomplete_src => artists_path }, :autocomplete => 'off'
    near
    = search_field_tag :location, params[:location], :placeholder => "address, city, state, country", :class => "input-xlarge"
    = link_to root_path, :class => "btn btn-link current-location nav-utils", :data => {:toggle => "tooltip", :placement => "bottom", :'original-title' => "Click to use my current location"} do
      %i.icon-map-marker
  = button_tag :type => 'submit', :class => "btn btn-large btn-primary", :id => "query-submit" do
    %i.icon-search